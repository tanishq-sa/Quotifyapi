# ========================================
# QUOTIFY API - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# Remove the # comments when setting actual values

# ========================================
# SERVER CONFIGURATION
# ========================================

# Port number for the server to run on
# Default: 3000 (if not set)
PORT=3000

# Node environment mode
# Options: development, production, test
NODE_ENV=development

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================

# Rate limit window in milliseconds (15 minutes)
# Default: 900000 (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# General rate limit (requests per window)
# Default: 1000
GENERAL_RATE_LIMIT=1000

# API endpoint rate limit (requests per window)
# Default: 500 (stricter for /api routes)
API_RATE_LIMIT=500

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Trust proxy setting
# Set to 1 if behind proxy/CDN (like Vercel)
# Default: 0 (false)
TRUST_PROXY=0

# ========================================
# ENVIRONMENT-SPECIFIC SETTINGS
# ========================================

# For development, you might want higher limits:
# GENERAL_RATE_LIMIT=2000
# API_RATE_LIMIT=1000

# For production, you might want stricter limits:
# GENERAL_RATE_LIMIT=500
# API_RATE_LIMIT=250

# ========================================
# USAGE INSTRUCTIONS
# ========================================
# 1. Copy this file to .env
# 2. Remove the # comments from lines you want to set
# 3. Fill in your actual values
# 4. Never commit .env to version control
# 5. Restart your server after making changes

# ========================================
# MINIMAL CONFIGURATION (like your current setup)
# ========================================
# PORT=3000
# NODE_ENV=development
# RATE_LIMIT_WINDOW_MS=900000
# GENERAL_RATE_LIMIT=1000
# API_RATE_LIMIT=500
# TRUST_PROXY=1 