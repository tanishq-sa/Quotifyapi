# Quote API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes (in milliseconds)
GENERAL_RATE_LIMIT=1000           # General requests per window
API_RATE_LIMIT=500               # API requests per window

# Security Configuration (optional)
TRUST_PROXY=1                    # Set to 1 if behind proxy/CDN

# Environment-specific settings
# For development, you might want higher limits:
# GENERAL_RATE_LIMIT=2000
# API_RATE_LIMIT=1000

# For production, you might want stricter limits:
# GENERAL_RATE_LIMIT=500
# API_RATE_LIMIT=250
